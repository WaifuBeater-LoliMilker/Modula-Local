<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ModulaLocal.Views.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:ModulaLocal.ViewModels"
    Title="">
    <ContentPage.BindingContext>
        <vm:MainPageViewModel />
    </ContentPage.BindingContext>
    <Shell.TitleView>
        <Grid
            Padding="0"
            ColumnSpacing="0"
            VerticalOptions="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <BoxView Grid.Column="0" />
            <Button
                Grid.Column="1"
                FontSize="{OnIdiom Phone=12,
                                   Tablet=17}"
                ImageSource="call.png"
                Text="Call" />
            <Button
                Grid.Column="2"
                FontSize="{OnIdiom Phone=12,
                                   Tablet=17}"
                ImageSource="return_tray.png"
                Text="Return" />
            <Button
                Grid.Column="3"
                FontSize="{OnIdiom Phone=12,
                                   Tablet=17}"
                ImageSource="done.png"
                Text="Done" />
        </Grid>
    </Shell.TitleView>
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>
    <CollectionView
        HorizontalOptions="FillAndExpand"
        ItemsSource="{Binding Items}"
        SelectionMode="Single"
        VerticalOptions="FillAndExpand">
        <CollectionView.Header>
            <Grid Padding="1" ColumnSpacing="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="35" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <BoxView Grid.Column="0" />
                <Label
                    Grid.Column="1"
                    FontAttributes="Bold"
                    FontSize="24"
                    HorizontalTextAlignment="Center"
                    Text="Mã sản phẩm"
                    VerticalTextAlignment="Center" />
                <Label
                    Grid.Column="2"
                    FontAttributes="Bold"
                    FontSize="24"
                    HorizontalTextAlignment="Center"
                    Text="Tên sản phẩm"
                    VerticalTextAlignment="Center" />
                <Label
                    Grid.Column="3"
                    FontAttributes="Bold"
                    FontSize="24"
                    HorizontalTextAlignment="Center"
                    Text="QRCode"
                    VerticalTextAlignment="Center" />
                <Label
                    Grid.Column="4"
                    FontAttributes="Bold"
                    FontSize="24"
                    HorizontalTextAlignment="Center"
                    Text="Vị trí"
                    VerticalTextAlignment="Center" />

            </Grid>
        </CollectionView.Header>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid Padding="1" ColumnSpacing="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="35" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <CheckBox
                        Grid.Column="0"
                        IsChecked="{Binding IsSelected}"
                        VerticalOptions="Center" />
                    <Label
                        Grid.Column="1"
                        FontSize="22"
                        Text="{Binding ProductCode}"
                        VerticalOptions="Center" />
                    <Label
                        Grid.Column="2"
                        FontSize="22"
                        Text="{Binding ProductName}"
                        VerticalOptions="Center" />
                    <Label
                        Grid.Column="3"
                        FontSize="22"
                        Text="{Binding QRCode}"
                        VerticalOptions="Center" />
                    <Label
                        Grid.Column="4"
                        FontSize="22"
                        Text="{Binding AddressModula}"
                        VerticalOptions="Center" />
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
