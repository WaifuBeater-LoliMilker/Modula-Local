<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ModulaLocal.Views.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:ModulaLocal.ViewModels"
    Title="">
    <ContentPage.BindingContext>
        <vm:MainPageViewModel />
    </ContentPage.BindingContext>
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Order="Primary"
            Priority="0"
            Text="Call" />
        <ToolbarItem
            Order="Primary"
            Priority="0"
            Text="Rerturn" />
        <ToolbarItem
            Order="Primary"
            Priority="0"
            Text="Done" />
    </ContentPage.ToolbarItems>
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>
    <CollectionView
        HorizontalOptions="FillAndExpand"
        ItemsSource="{Binding Items}"
        SelectionMode="Single"
        VerticalOptions="FillAndExpand">
        <CollectionView.Header>
            <Grid Padding="8" ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="35" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <BoxView Grid.Column="0" VerticalOptions="Center" />
                <Label
                    Grid.Column="1"
                    FontAttributes="Bold"
                    FontSize="24"
                    Text="Mã sản phẩm"
                    VerticalOptions="Center" />
                <Label
                    Grid.Column="2"
                    FontAttributes="Bold"
                    FontSize="24"
                    Text="Tên sản phẩm"
                    VerticalOptions="Center" />
                <Label
                    Grid.Column="3"
                    FontAttributes="Bold"
                    FontSize="24"
                    Text="QRCode"
                    VerticalOptions="Center" />
                <Label
                    Grid.Column="4"
                    FontAttributes="Bold"
                    FontSize="24"
                    Text="Vị trí"
                    VerticalOptions="Center" />
            </Grid>
        </CollectionView.Header>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid Padding="8" ColumnSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="35" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <CheckBox
                        Grid.Column="0"
                        IsChecked="{Binding IsSelected}"
                        VerticalOptions="Center" />
                    <Label
                        Grid.Column="1"
                        FontSize="22"
                        Text="{Binding ProductCode}"
                        VerticalOptions="Center" />
                    <Label
                        Grid.Column="2"
                        FontSize="22"
                        Text="{Binding ProductName}"
                        VerticalOptions="Center" />
                    <Label
                        Grid.Column="3"
                        FontSize="22"
                        Text="{Binding QRCode}"
                        VerticalOptions="Center" />
                    <Label
                        Grid.Column="4"
                        FontSize="22"
                        Text="{Binding AddressModula}"
                        VerticalOptions="Center" />
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
